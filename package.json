{
  "name": "excel-status-summarizer",
  "version": "1.0.0",
  "description": "Excelの制作状況を抽出し、名義別の進捗確認を素早く行えるアプリ",
  "main": "src/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dist:mac": "electron-builder --mac --publish=never",
    "dist:win": "electron-builder --win --publish never"
  },
  "dependencies": {
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.2.4",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.kuwae.excel-status-summarizer",
    "productName": "名義SPOT進捗チェッカー",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    }
  }
}
